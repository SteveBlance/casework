<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <security-constraint>
        <display-name>Restrict access to XHTML documents</display-name>
        <web-resource-collection>
            <web-resource-name>XHTML</web-resource-name>
            <url-pattern>*.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/public/viewExpired.jsf</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/public/error.jsf</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/public/index.jsf</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/public/login.jsf</form-login-page>
            <form-error-page>/public/error.jsf</form-error-page>
        </form-login-config>
    </login-config>

    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>

</web-app>